# Collective .gitignore for Raricart repository

# Dependencies
vendor/
node_modules/

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# OS files
.DS_Store
Thumbs.db

# Environment / Config
.env
.env.local
.env.production
site/assets/data/config.json
site/assets/data/content.json

# Exclude existing git history from subfolders if they were not removed
**/.git/

# PHP specific
composer.phar
.phpunit.result.cache

# Assets cleanup
site/assets/data/*.json
!site/assets/data/*.json.dist

# deploy / runtime
.ftp-deploy-sync-state.json
.htpasswd

# Runtime data
site/admin/leady.csv
site/drafts/
site/api/drafts/
site/assets/uploads/

# IDE
.vscode/
.idea/

# Runtime config
site/assets/data/*.json
!site/assets/data/*.json.dist

# Uploads
site/assets/gallery/
site/assets/images/

