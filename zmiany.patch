+    border-left: 5px solid var(--accent);
+}
+
+.combo-header {
+    display: flex;
+    justify-content: space-between;
+    align-items: center;
+    margin-bottom: 15px;
+}
+
+.combo-price-main {
+    font-weight: 700;
+    color: var(--accent-dark);
+    font-size: 1.3rem;
+}
+
+.combo-per-person {
+    font-size: 0.9rem;
+    color: var(--color-text);
+    font-weight: 300;
+}
+
+/* LOGISTICS */
