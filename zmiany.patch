+    text-align: center;
+    margin-top: 50px;
+    padding: 30px;
+    background: rgba(255,255,255,0.4);
+    border-radius: var(--radius-ui);
+    font-size: 0.95rem;
+}
+
+.logistics p {
+    margin-bottom: 10px;
+}
+
+/* CTA */
